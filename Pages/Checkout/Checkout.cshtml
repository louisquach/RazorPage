@page
@model PizzaRazor.Pages.Checkout.CheckoutModel
@{
}

<h1>Your Order!</h1>
@{
    var imagePath = "/images/Pizzas/" + (@Model.ImageTitle + ".png");
}
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img class="w-100" asp-append-version="true" src=@imagePath/>
        <p>Your order for the @Model.PizzaName Pizza is ready!</p>
        <p>Price is: $@Model.PizzaPrice</p>
        <a
         class="btn alert-primary mt-1 mx-auto"
         asp-page="/Checkout/Thankyou"
         asp-area=""
        >Confirm Order
         </a>
    </div>
</div>